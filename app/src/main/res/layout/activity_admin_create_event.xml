<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.btcpro.dolphons.Login">


    <com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:alignContent="stretch"
        app:alignItems="stretch"
        app:flexDirection="column"
        app:flexWrap="wrap"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="60dp">


        <LinearLayout
            android:id="@+id/header"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:background="#00ACC1"
            android:text=""
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            app:layout_flexBasisPercent="15%"
            android:gravity="center"


            >


            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:lineSpacingExtra="8sp"
                android:text="Create Event"
                android:textAllCaps="false"
                android:textColor="@android:color/black"
                android:textSize="26sp" />
        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:background="#26C6DA"
            app:layout_flexBasisPercent="20%"
            android:gravity="center">

            <EditText
                android:id="@+id/Title"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#51D1E2"
                android:inputType="textPersonName"
                android:padding="5dp"
                android:hint="Event Name" />

            <EditText
                android:id="@+id/location"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#51D1E2"
                android:inputType="textPersonName"
                android:padding="5dp"
                android:hint="Location" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:background="#26C6DA"
            android:gravity="center"

            app:layout_flexBasisPercent="40%">


            <EditText
                android:id="@+id/Summary"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#51D1E2"
                android:gravity="top|start"
                android:inputType="textMultiLine"
                android:lines="8"
                android:minLines="6"
                android:padding="5dp"
                android:hint="Summary" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:background="#00BCD4"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp"

            app:layout_flexBasisPercent="15%"
            tools:layout_editor_absoluteY="128dp">


            <Button
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:id="@+id/Date"
                android:text="Set Date"
                android:background="@drawable/button_lightblueback_whiteoutline" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:background="#26C6DA"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp"

            app:layout_flexBasisPercent="10%"
            tools:layout_editor_absoluteY="128dp">


            <Button
                android:id="@+id/button3"
                android:layout_width="100dp"
                android:layout_height="wrap_content"

                android:onClick="createEvent"
                android:text="Create"
                android:background="@drawable/button_lightblueback_whiteoutline"/>
        </LinearLayout>

    </com.google.android.flexbox.FlexboxLayout>

</android.support.constraint.ConstraintLayout>
